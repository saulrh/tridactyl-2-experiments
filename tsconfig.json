{
    "compilerOptions": {
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "outDir": "./build/tsc-out",
        "sourceMap": true,
        "noImplicitAny": false,
        "target": "ES2017",
        "lib": ["ES2017", "dom", "dom.iterable"],
        "typeRoots": [
            "node_modules/@types",
            "src/@types",
            "node_modules/web-ext-types"
        ],
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "baseUrl": "src/",
        "paths": {
            "~*": ["./*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.test.ts"]
}
